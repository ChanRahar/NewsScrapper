{{> navbar}}

<div class="container">
    <div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">News Scrapper</h1>
    <p class="lead">This is a news scrapper that scrape top news from reddit/r/news. Click on Scrape to show news</p>
  </div>
</div>
    {{#each data}}
    <div class="card text-center">
        <h5 class="card-header text-center title">{{title}}</h5>
        <div class="card-body">
           
            <a href="#" class="btn btn-primary btn-lg active save-button" role="button" aria-pressed="true" title="{{title}}" link="{{link}}">Save Article</a>
            <a href="{{link}}" class="btn btn-secondary btn-lg active link" role="button" aria-pressed="true">Read News</a>
        </div>
    </div>
    <br>
    {{/each}}
</div>

